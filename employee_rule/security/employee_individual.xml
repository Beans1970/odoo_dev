<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.rule" id="hr_employee_individual_access">
			<field name="name">Employee Individual</field>
			<field name="model_id" ref="hr.model_hr_employee" />
			<field name="domain_force">[('user_id','=',user.id)]</field>
			<field name="global" eval="False"/>
			<field name="groups" eval="[(4, ref('hr.group_hr_user'))]" />
		</record>
		 <record model="ir.rule" id="hr_employee_individual_access_admin">
			<field name="name">Employee Individual Admin</field>
			<field name="model_id" ref="hr.model_hr_employee" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('base.user_admin'))]" />
		</record>
		<record model="ir.rule" id="hr_employee_directory_access">
			<field name="name">Employee Directory Individual</field>
			<field name="model_id" ref="hr.model_hr_employee_public" />
			<field name="domain_force">[('user_id','=',user.id)]</field>
			<field name="global" eval="False"/>
			<field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_kiosk'))]" />
		</record>
		<record model="ir.rule" id="hr_employee_directory_access_admin">
			<field name="name">Employee Directory Admin</field>
			<field name="model_id" ref="hr.model_hr_employee_public" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('base.user_admin'))]" />
		</record>


    </data>
</odoo>
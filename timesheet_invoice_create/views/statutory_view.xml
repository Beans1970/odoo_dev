<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_statutory_compliance" model="ir.ui.view">
			<field name="name">statutory.compliance.form</field>
			<field name="model">statutory.compliance</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name_seq"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="pf" widget="many2many_tags"/>
							</group>
							<group>
								 <label for="document_month" string="Day &amp; Month"/>
                                <div>
                                    <field name="document_day" class="oe_inline text-center" style="width: 20% !important;"/>
                                    <span style="width: 5%; display: inline-block"/>
                                    <field name="document_month" class="oe_inline" style="width: 75% !important;"/>
                                </div>
							</group>
							<group>
								<field name="esi" widget="many2many_tags"/>
							</group>
                            <group>
								<field name="pt" widget="many2many_tags"/>
							</group>
							<group>
								<field name="insurance" widget="many2many_tags"/>
							</group>
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="tds" widget="many2many_tags"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_statutory_compliance_tree" model="ir.ui.view">
			<field name="name">statutory.compliance.tree</field>
			<field name="model">statutory.compliance</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name_seq"/>
					<field name="pf" widget="many2many_tags"/>
					<field name="esi" widget="many2many_tags"/>
					<field name="pt" widget="many2many_tags"/>
					<field name="insurance" widget="many2many_tags"/>
					<field name="tds" widget="many2many_tags"/>
					<field name="company_id"/>
				</tree>
			</field>
		</record>

        <record id="action_statutory_compliance" model="ir.actions.act_window">
            <field name="name">Statutory Compliance</field>
            <field name="res_model">statutory.compliance</field>
            <field name="view_mode">tree,form</field>
        </record>

		<menuitem id="statutory_compliance_menu"
            name="Statutory Compliance Documents"
            parent="hr_timesheet.timesheet_menu_root"
            action="action_statutory_compliance"
            />

     </data>



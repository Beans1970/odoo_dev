<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_inv_merge_res_setting_inherit_id_form" model="ir.ui.view">
        <field name="name">sh.inv.merge.res.setting.inherit.id.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']//div[@id='pay_invoice_online_setting_container']" position="after">
                <h2>Invoice Attachment Merge</h2>
                <div class="row mt16 o_settings_container" name="attachment_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="attachment_details_settings">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Reports</span>
                            <br />
                            <div class="text-muted mb-3">
                                Selected Attachment will be Merge...
                                </div>
                            <field name="sh_inv_merge_pdf_report_ids" widget="many2many_tags" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
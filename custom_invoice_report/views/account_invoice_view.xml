<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Boolean field to form view-->
    <record model="ir.ui.view" id="view_invoice_form">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <!-- Include checkboxes for whether to include personal info and summary of invoices or not-->
                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="hour_summary_invoice"/>
                    <field name="personal_info"/>
                    <field name="timesheet_inv_date" invisible="1"/>
                    <!--<field name="timesheet_sheet_id"/>-->
<!--                     <field name="value1" invisible="1"/>-->
                  <!--  <field name="value1" invisible="1"/>
                    <field name="total_hours" invisible="1"/>-->
                   <!-- <field name="line_ids"/>-->
                </xpath>
                <xpath expr="//group[@name='accounting_info_group']" position="after">

                    <group string="Statutory compliance">
                        <field name="account_pf_ids" widget="many2many_tags"/>
                        <field name="account_esi_ids" widget="many2many_tags"/>
                        <field name="account_pt_ids" widget="many2many_tags"/>
                        <field name="account_tds_ids" widget="many2many_tags"/>
                        <field name="inv_insurance_ids" widget="many2many_tags"/>
                         <label for="document_month" string="Day &amp; Month"/>
                                <div>
                                    <field name="document_day" class="oe_inline text-center" style="width: 20% !important;"/>
                                    <span style="width: 5%; display: inline-block"/>
                                    <field name="document_month" class="oe_inline" style="width: 75% !important;"/>
                                </div>
                    </group>
                </xpath>
                <notebook position="inside">
                    <page string="Timesheet Attachment" name="timesheet_attachment">
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </page>
                </notebook>
            </data>
        </field>
    </record>
</odoo>

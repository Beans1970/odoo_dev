<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_timesheet_cost_rate" model="ir.ui.view">
        <field name="name">hr.timesheet.sheet.cost.form</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside" >
                <page string="Timesheet Cost">
                     <group string="Timesheet Invoice">
                         <group>
                             <field name="document_day"/>
                      <field name="no_of_leave_approved" invisible="1"/>
                      <field name="no_of_unpaid_leave" string="No of Unpaid Leave"/>
                      <field name="client_holiday"/>
                      <field name="no_of_working_day"/>
                      <field name="per_day_rate"/>
                      <field name="invoice_rate"/>
                         </group>
                  </group>
                 </page>
            </xpath>
        </field>
    </record>

     <record id="hr_timesheet_sheet_customer_inherited_view" model="ir.ui.view">
                <field name="name">hr.timesheet.sheet.customer.tree.inherited</field>
                <field name="model">hr_timesheet.sheet</field>
                <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_tree"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='employee_id']" position="after">
                        <field name="customer_name" />
                    </xpath>
                </field>
            </record>
</odoo>